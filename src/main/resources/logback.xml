<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] [%-5level] %logger{0}:%line - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.my.app" level="debug" />

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>